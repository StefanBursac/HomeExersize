<Window x:Class="MyPaneExersize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPaneExersize"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>


            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        
            <DockPanel>
                <Canvas>
                <Rectangle Fill="Blue " Width="517" Height="40"/>
                <Button x:Name="button" Content="Click Me" Grid.Row="1" Click="button_Click" Canvas.Left="225" Canvas.Top="10"/>
           
                </Canvas>
                </DockPanel>

        <TextBlock
            Grid.Row="1" Text="{Binding firstName}"/>



    </Grid>
</Window>
