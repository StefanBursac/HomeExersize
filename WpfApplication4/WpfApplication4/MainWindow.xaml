<Window x:Class="WpfApplication4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication4"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="Silver" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            

        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Hello" Margin="5" VerticalAlignment="Center" />
            <TextBox Width="100" Margin="5" VerticalAlignment="Center"/>
            <ComboBox  Width="50" Margin="5"  Height="25" VerticalAlignment="Center">
                <ComboBoxItem Content="Stefan"/>
            </ComboBox>
            <CheckBox VerticalAlignment="Center" Margin="5"/>



        </StackPanel>
    </Grid>
</Window>
